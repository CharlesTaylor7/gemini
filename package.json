{
  "name": "gemini",
  "version": "0.0.0",
  "repository": "git@github.com:CharlesTaylor7/gemini.git",
  "author": "Charles Taylor <charlestaylor95@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postinstall": "spago install",
    "watch:purs": "spago build --clear-screen -w --purs-args \"--censor-codes=ImplicitQualifiedImportReExport,ShadowedName\"",
    "watch:js": "PORT=3000 vite",
    "tailwind": "tailwindcss -i tailwind.source.css -o dist/tailwind.css",
    "prebuild": "yarn run tailwind && cp -r static/* dist/",
    "build": "yarn spago bundle-app --minify --source-maps --to dist/index.js",
    "clean:purs": "rm -rf .spago/ output/",
    "format": "purs-tidy format-in-place \"src/**/*.purs\" \"test/**/*.purs\"; prettier --write src",
    "test": "spago test --purs-args \"--censor-codes=ImplicitQualifiedImportReExport,ShadowedName\""
  },
  "devDependencies": {
    "@rowtype-yoga/prettier-plugin-purescript": "^1.11.2",
    "benchmark": "^2.1.4",
    "esbuild": "^0.19.2",
    "prettier": "^3.0.2",
    "purescript": "^0.15.10",
    "purescript-psa": "^0.8.2",
    "purs-tidy": "^0.10.0",
    "spago": "^0.21.0",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9"
  }
}
